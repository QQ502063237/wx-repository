<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.weixin.demo.mapper.ShoppingCarMapper">
  <resultMap id="BaseResultMap" type="com.weixin.demo.entity.car.ShoppingCar">
    <!--@mbg.generated-->
    <!--@Table shopping_car-->
    <result column="car_id" jdbcType="INTEGER" property="carId" />
    <result column="product_id" jdbcType="INTEGER" property="productId" />
    <result column="car_num" jdbcType="INTEGER" property="carNum" />
    <result column="wechat_num" jdbcType="VARCHAR" property="weChatNum" />
  </resultMap>

  <!--连接商品表和商品图片表查询-->
  <resultMap id="carAll" type="com.weixin.demo.entity.car.ShoppingCar">
    <!--@mbg.generated-->
    <!--@Table shopping_car-->
    <result column="car_id" jdbcType="INTEGER" property="carId" />
    <result column="product_id" jdbcType="INTEGER" property="productId" />
    <result column="car_num" jdbcType="INTEGER" property="carNum" />
    <result column="wechat_num" jdbcType="VARCHAR" property="weChatNum" />
    <association property="product" javaType="com.weixin.demo.entity.product.Product">
      <result column="product_id" jdbcType="INTEGER" property="productId" />
      <result column="product_name" jdbcType="VARCHAR" property="productName" />
      <result column="product_type" jdbcType="VARCHAR" property="productType" />
      <result column="product_desc" jdbcType="VARCHAR" property="productDesc" />
      <result column="product_money" jdbcType="DECIMAL" property="productMoney" />
    </association>
    <association property="productImg" javaType="com.weixin.demo.entity.productimg.ProductImg" >
      <result column="product_img_id" jdbcType="INTEGER" property="productImgId" />
      <result column="product_id" jdbcType="INTEGER" property="productId" />
      <result column="product_url" jdbcType="VARCHAR" property="productUrl" />
    </association>
  </resultMap>


  <!--根据用户,链表查询购物车全部数据-->
  <select id="findById" parameterType="com.weixin.demo.entity.vip.Vip" resultMap="carAll" >
   select * from shopping_car LEFT JOIN product on product.product_id=shopping_car.product_id
LEFT JOIN product_img ON product_img.product_id=shopping_car.product_id WHERE shopping_car.wechat_num=#{wechatNum}
  </select>



  <insert id="insert" parameterType="com.weixin.demo.entity.car.ShoppingCar">
    <!--@mbg.generated-->
    insert into shopping_car (car_id, product_id, car_num, 
      user_id)
    values (#{carId,jdbcType=INTEGER}, #{productId,jdbcType=INTEGER}, #{carNum,jdbcType=INTEGER}, 
      #{weChatNum,jdbcType=VARCHAR})
  </insert>

  <insert id="insertSelective" parameterType="com.weixin.demo.entity.car.ShoppingCar">
    <!--@mbg.generated-->
    insert into shopping_car
    <trim prefix="(" suffix=")" suffixOverrides=",">
      <if test="carId != null">
        car_id,
      </if>
      <if test="productId != null">
        product_id,
      </if>
      <if test="carNum != null">
        car_num,
      </if>
      <if test="weChatNum != null">
        wechat_num,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides=",">
      <if test="carId != null">
        #{carId,jdbcType=INTEGER},
      </if>
      <if test="productId != null">
        #{productId,jdbcType=INTEGER},
      </if>
      <if test="carNum != null">
        #{carNum,jdbcType=INTEGER},
      </if>
      <if test="weChatNum != null">
        #{weChatNum,jdbcType=VARCHAR},
      </if>
    </trim>
  </insert>


<!--更新数量 -->
  <update id="upNumber" parameterType="com.weixin.demo.entity.car.ShoppingCar">
    UPDATE  shopping_car set car_num=#{carNum} WHERE car_id=#{carId}
  </update>

  <!--删除数据-->
  <delete id="deleteCarId" parameterType="arraylist">
    delete from shopping_Car where car_id in
    <foreach collection="list" open="(" separator="," close=")" item="car">
      #{car.carId}
    </foreach>
  </delete>
    <!--查询包含id的对象-->
  <select id="optionList" parameterType="arraylist" resultType="com.weixin.demo.entity.car.ShoppingCar">
      select * from shopping_car where car_id in
      <foreach collection="list" open="(" separator="," close=")" item="car">
          #{car.carId}
      </foreach>
  </select>


</mapper>